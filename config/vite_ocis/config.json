{
  "server": "https://cbox-ocisdev-javier-live.cern.ch",
  "theme": "https://cbox-ocisdev-javier-live.cern.ch/cernbox/theme-cernbox-0.1.9/theme.json",
  "version": "0.1.0",
  "openIdConnect": {
    "metadata_url": "https://auth.cern.ch/auth/realms/cern/.well-known/openid-configuration",
    "authority": "https://auth.cern.ch/auth/realms/cern/",
    "client_id": "cernbox-service-dev",
    "response_type": "code",
    "scope": "openid profile email"
  },
  "options": {
    "contextHelpers": true,
    "enableAdvancedTable": true,
    "runningOnEos": true,
    "cernFeatures": true,
    "hoverableQuickActions": true,
    "disableFeedbackLink": true,
    "homeFolder": "/eos/user/{{substr 0 1 .Id}}/{{.Id}}",
    "previewFileMimeTypes" : [
      "image/gif",
      "image/png",
      "image/jpeg"
    ],
    "openAppsInTab": true,
    "editor": {
      "autosaveEnabled": true,
      "autosaveInterval": 120
    },
    "breadcrumbItemMaxLength": 30,
    "routing": {
      "idBased": false
    },
    "upload": {
      "xhr": {
        "timeout": 3600000
      }
    },
    "tours": [
            "https://qa.cernbox.cern.ch/cernbox/tours-cernbox-0.0.8/new_features.json"
          ]
  },
  "apps": [
    "files",
    "search",
    "preview",
    "external",
    "pdf-viewer"  ],
  "external_apps": [
    {
      "id": "open-in-swan",
      "path": "/cernbox/open-in-swan-2.0.0/main.js"
    },
    {
      "id": "jupyter",
      "path": "/cernbox/jupyter-2.0.0/main.js"
    },
    {
      "id": "rootjs",
      "path": "/cernbox/rootjs-2.0.0/main.js"
    },
    {
      "id": "ifc-js",
      "path": "/cernbox/ifc-js-2.0.2/main.js"
    },
    {
      "id": "old-web-redirector",
      "path": "/cernbox/old-web-redirector-1.0.0/main.js"
    },
    {
      "id": "tours",
      "path": "/cernbox/tours-1.0.0/main.js"
    },
    {
      "id": "top-bar",
      "path": "/cernbox/top-bar-1.0.0/main.js"
    },
    {
      "id": "draw-io",
      "path": "web-app-draw-io",
      "config": {
        "url": "https://drawio.web.cern.ch",
        "autosave": true,
        "theme": "minimal"
      }
    },
    {
      "id": "text-editor",
      "path": "web-app-text-editor",
      "config": {
        "primaryExtensions": ["txt"],
        "extraExtensions": ["htm", "html", "css", "js", "ts", "php", "yml", "toml", "qml", "pl", "pm", "sh", "tcsh", "zsh", "conf", "ini", "inf", "make", "cmake", "mk", "in", "csv"]
      }
    }
  ]
}
